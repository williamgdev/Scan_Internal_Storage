<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yendry.scaninternalstoage.MainActivity">

    <TextView
        android:textStyle="bold"
        android:id="@+id/dir_count_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/file_count_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dir_count_id"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/most_id"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/file_count_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Most frequently ext"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/common_ext_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/most_id"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="30dp" />


</RelativeLayout>
